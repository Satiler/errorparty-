# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=errorparty
DB_USER=errorparty
DB_PASSWORD=change_me_secure_password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# TeamSpeak Server Configuration
TS_HOST=your.teamspeak.server
TS_QUERY_PORT=10011
TS_SERVER_PORT=9987
TS_QUERY_USER=serveradmin
TS_QUERY_PASSWORD=your_ts_query_password
TS_SERVER_ID=1

# Steam API (optional, for game integration)
STEAM_API_KEY=your_steam_api_key_here

# JWT Authentication
JWT_SECRET=change_me_random_secret_key_min_32_chars
JWT_EXPIRES_IN=7d

# Application Settings
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# CORS Settings
CORS_ORIGIN=http://localhost:5173

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Nginx
NGINX_PORT=80
NGINX_SSL_PORT=443

# Domain (for production)
DOMAIN=errorparty.ru
SSL_EMAIL=admin@errorparty.ru

# Push Notifications (Web Push)
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
ADMIN_EMAIL=admin@errorparty.ru
