# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=errorparty_db
DB_USER=errorparty_user
DB_PASSWORD=your_secure_password_here

# Session Secret
SESSION_SECRET=your_session_secret_here

# Steam API Configuration
STEAM_API_KEY=your_steam_api_key_here

# Music API Configuration
JAMENDO_API_KEY=your_jamendo_api_key_here

# TeamSpeak Configuration (optional)
TEAMSPEAK_HOST=your_teamspeak_host
TEAMSPEAK_PORT=10022
TEAMSPEAK_USERNAME=serveradmin
TEAMSPEAK_PASSWORD=your_teamspeak_password
TEAMSPEAK_NICKNAME=ErrorParty Bot

# CS2 Demo Storage
CS2_DEMO_PATH=/app/demos

# Steam GC Configuration (optional - for demo downloads)
# Leave empty to use anonymous Steam login (recommended)
STEAM_GC_ACCOUNT_NAME=
STEAM_GC_PASSWORD=

# Application Settings
NODE_ENV=production
PORT=5000
FRONTEND_URL=https://errorparty.ru
